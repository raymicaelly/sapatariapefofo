    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Support</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .chat-container {
            width: 80%;
            max-width: 800px;
            border: 1px solid #ccc;
            border-radius: 5px;
            overflow: hidden;
        }
        .chat-box {
            height: 400px;
            overflow-y: scroll;
            padding: 10px;
            background-color: #fff;
        }
        .message {
            margin-bottom: 10px;
            padding: 8px;
            border-radius: 5px;
            position: relative;
        }
        .user-message {
            background-color: #DCF8C6;
            text-align: right;
        }
        .support-message {
            background-color: #E0E0E0;
            text-align: left;
        }
        .message-options {
            position: absolute;
            top: 0;
            right: 0;
            font-size: 12px;
            visibility: hidden;
            opacity: 0;
            transition: visibility 0s, opacity 0.5s linear;
        }
        .message:hover .message-options {
            visibility: visible;
            opacity: 1;
        }
        .status {
            font-size: 12px;
            color: #999;
            text-align: right;
            margin-top: 5px;
        }
        .input-box {
            padding: 10px;
            background-color: #f2f2f2;
            display: flex;
            align-items: center;
        }
        .input-box input[type="text"] {
            flex: 1;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 3px;
            font-size: 16px;
        }
        .input-box input[type="file"] {
            display: none;
        }
